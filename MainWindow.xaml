<Window x:Class="LibProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibProject"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="MainWindow" Height="515" Width="700">
    <Grid>
        <StackPanel Grid.Column="0">
            <Button x:Name="ShowButton" Height="100" Width="100" HorizontalAlignment="Left" Content="Show Books" Click="ShowButton_Click"/>
            <Button x:Name="AddButton" Height="100" Width="100" HorizontalAlignment="Left" Content="Add Book" Click="AddButton_Click"/>
            <Button x:Name="EditButton" Height="100" Width="100" HorizontalAlignment="Left" Content="Edit Book" Click="EditButton_Click"/>
            <Button x:Name="DeleteButton" Height="100" Width="100" HorizontalAlignment="Left" Content="Delete Book" Click="DeleteButton_Click"/>
            <Button x:Name="ExitButton" Height="100" Width="100" HorizontalAlignment="Left" Content="Exit" Click="ExitButton_Click"/>
        </StackPanel>

    </Grid>

</Window>